<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInactivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/gray"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/gray"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_whatsapp" />

        <EditText
            android:id="@+id/etemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_sms"
            android:ems="10"
            android:hint="Enter email_addres"
            android:inputType="textEmailAddress"
            android:padding="9dp"
            android:paddingLeft="5dp"
            android:textColorHighlight="#FFFFFF" />

        <EditText
            android:id="@+id/etpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_sms"
            android:ems="10"
            android:hint="Enter you password"
            android:inputType="textPassword"
            android:padding="9dp"
            android:paddingLeft="5dp" />

        <TextView
            android:id="@+id/tvclicksignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:paddingLeft="4dp"
            android:paddingRight="10dp"
            android:text="click for signUp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnsignIn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="10dp"
            android:text="SignIn"
            app:cornerRadius="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_google"
                android:padding="10dp"
                android:text="GOOLGE"
                android:textColor="#1B1818"
                app:backgroundTint="#FFFFFF"
                app:cornerRadius="6dp" />

            <Button
                android:id="@+id/btnfacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_facebook"
                android:padding="10dp"
                android:text="FaceBook"
                android:textColor="#201E1E"
                app:backgroundTint="#009688"
                app:cornerRadius="6dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/signphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:padding="6dp"
            android:text="Signup with phone"
            android:textColor="#009688"
            android:textStyle="bold|italic" />

    </LinearLayout>
</LinearLayout>